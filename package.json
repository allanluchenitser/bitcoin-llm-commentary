{
  "name": "bitcoin-llm-commentary-monorepo",
  "private": true,
  "scripts": {
    "compose:base": "docker compose --env-file ./infra/.env.local -f ./infra/compose.base.yml",
    "compose:apps": "docker compose --env-file ./infra/.env.local -f ./infra/compose.base.yml -f ./infra/compose.apps.yml",
    "base:up": "npm run -s compose:base -- up -d",
    "base:down": "npm run -s compose:base -- down",
    "base:stop": "npm run -s compose:base -- stop",
    "base:logs": "npm run -s compose:base -- logs -f --tail=200",
    "base:ps": "npm run -s compose:base -- ps",
    "base:reset": "npm run -s compose:base -- down -v && sleep 2 && npm run -s compose:base -- up -d",
    "base:reset_verbose": "npm run compose:base -- down -v && sleep 2 && npm run -s compose:base -- up",
    "apps:up": "npm run -s compose:apps -- up -d",
    "apps:down": "npm run -s compose:apps -- down",
    "apps:stop": "npm run -s compose:apps -- stop",
    "apps:logs": "npm run -s compose:apps -- logs -f --tail=200",
    "apps:ps": "npm run -s compose:apps -- ps",
    "apps:reset": "npm run -s compose:apps -- down -v && npm run -s compose:apps -- up -d",
    "pg:psql": "docker exec -it blc-postgres psql -U blc -d blc",
    "redis:cli": "docker exec -it blc-redis redis-cli"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@blc/price-ingestor": "^1.0.0",
    "@types/node": "^25.0.9",
    "nodemon": "^3.1.14",
    "typescript": "^5.9.3"
  }
}
